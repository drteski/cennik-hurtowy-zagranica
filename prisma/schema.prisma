generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id     Int            @id
  sku    String
  ean    String
  brand  String
  prices ProductPrice[]
  names  ProductName[]
}

model ProductPrice {
  id        Int     @id @default(autoincrement())
  lang      String
  currency  String
  oldPrice  Float   @default(0)
  newPrice  Float   @default(0)
  product   Product @relation(fields: [productId], references: [id], onUpdate: Cascade, onDelete: Cascade)
  productId Int
}

model ProductName {
  id        Int     @id @default(autoincrement())
  lang      String
  name      String
  product   Product @relation(fields: [productId], references: [id], onUpdate: Cascade, onDelete: Cascade)
  productId Int
}

model Country {
  id          Int           @id @default(autoincrement())
  iso         String
  name        String
  currency    String
  locale      String
  mailingList MailingList[]
  password    String
}

model MailingList {
  id        Int      @id @default(autoincrement())
  country   Country  @relation(fields: [countryId], references: [id], onUpdate: Cascade, onDelete: Cascade)
  countryId Int
  subject   String
  emails    String[]
}

model Settings {
  id       Int    @id @default(autoincrement())
  password String
}

model ExcludeProducts {
  id         Int      @id @default(autoincrement())
  variantIds Int[]
  skus       String[]
  eans       String[]
  names      String[]
}
